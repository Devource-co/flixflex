{
  "name": "kencinema",
  "version": "0.0.1",
  "description": "Ticketing cinema app",
  "main": "index.js",
  "scripts": {
    "test:dbsetup": "NODE_ENV=test ts-node ./src/test-utils/setupDb.ts",
    "test": "NODE_ENV=test npm run test:dbsetup && jest --detectOpenHandles",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "node -r dotenv/config dist/app.js",
    "watch": "tsc && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "ci-process-cover": "cat coverage/lcov.info | coveralls",
    "typeorm": "ts-node -r tsconfig-paths/register  ./node_modules/typeorm/cli.js --config src/config/ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate  -- -n",
    "migration:run": "npm run typeorm migration:run",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js --config src/config/seedconfig.ts seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b0nbon1/Kencinema.git"
  },
  "keywords": [
    "cinema",
    "booking"
  ],
  "author": "bonvic <nyabuyabonvic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/b0nbon1/Kencinema/issues"
  },
  "homepage": "https://github.com/b0nbon1/Kencinema#readme",
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.7.50",
    "lodash.merge": "^4.6.2",
    "nodemailer": "^6.4.6",
    "nodemailer-mailgun-transport": "^2.0.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "twilio": "^3.41.1",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.24",
    "typeorm-seeding": "^1.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.11",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "concurrently": "^5.1.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.0.10",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
