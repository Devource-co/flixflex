{
  "name": "kencinema",
  "version": "0.0.1",
  "description": "Ticketing cinema app",
  "main": "index.js",
  "scripts": {
    "test:dbsetup": "NODE_ENV=test ts-node ./src/test-utils/setupDb.ts",
    "test": "NODE_ENV=test npm run test:dbsetup && jest --detectOpenHandles",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "start": "node -r dotenv/config dist/app.js",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "ci-process-cover": "cat coverage/lcov.info | coveralls",
    "typeorm": "ts-node -r tsconfig-paths/register  ./node_modules/typeorm/cli.js --config src/config/ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate  -- -n",
    "migration:run": "npm run typeorm migration:run",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js --config src/config/seedconfig.ts seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b0nbon1/Kencinema.git"
  },
  "keywords": [
    "cinema",
    "booking"
  ],
  "author": "bonvic <nyabuyabonvic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/b0nbon1/Kencinema/issues"
  },
  "homepage": "https://github.com/b0nbon1/Kencinema#readme",
  "dependencies": {
    "apollo-server-express": "^2.15.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "0.2.3",
    "class-transformer-validator": "0.9.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "libphonenumber-js": "^1.7.54",
    "lodash.merge": "^4.6.2",
    "nodemailer": "^6.4.10",
    "nodemailer-mailgun-transport": "^2.0.0",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "twilio": "^3.48.0",
    "type-graphql": "^1.0.0-rc.3",
    "typeorm": "^0.2.25",
    "typeorm-seeding": "^1.6.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
